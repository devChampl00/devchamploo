<!-- Breadcrumb -->
<nav style="--bs-breadcrumb-divider: '/'" aria-label="breadcrumb" class="small mb-4">
    <ol class="breadcrumb">
        <a href="#" class="text-reset me-3" onclick="return history.go(-1)">
            <i class="bi bi-arrow-left"></i>
        </a>
        <li class="breadcrumb-item">
            <a href="/dashboard" class="text-reset">Dashboard</a>
        </li>
        <li class="breadcrumb-item">
            <a href="/dashboard/posts" class="text-reset">Posts</a>
        </li>
        <li class="breadcrumb-item active" aria-current="page">Create post</li>
    </ol>
</nav>
<!-- Page content-->
<main class="bg-white p-3 rounded-4 small shadow-sm">
    <!-- Page content-->
    <div class="row border-bottom pb-3">
        <h1 class="fw-bolder fs-6 my-1">Create New Post</h1>
    </div>
    <div class="row px-0 px-lg-5 my-3">
        <div class="col">
            <form action="/dashboard/posts" method="POST" enctype="multipart/form-data" id="post-form">
                <div class="form-group mb-4">
                    <label for="title" class="form-label fw-semibold">Title<span class="text-danger">*</span></label>
                    <input type="text" class="form-control" id="title" name="title" autocomplete="off" autofocus required />
                </div>
                <div class="form-group mb-4">
                    <label for="image" class="form-label fw-semibold">Image</label>
                    <input type="file" class="form-control" id="image" name="image" />
                    <div class="imgPreviewContainer border border-top-0 rounded-bottom d-none p-2">
                        <div class="row justify-content-center">
                            <div class="col-md-8 col-lg-6">
                                <img src="" alt="" id="imgPreview" class="rounded border w-100" style="max-height: 200px; object-fit: cover" />
                            </div>
                        </div>
                    </div>
                </div>
                <div class="form-group row mb-4">
                    <label for="category" class="form-label fw-semibold">Category</label>
                    <div class="col-lg-6">
                        <select name="category" id="category" class="form-select">
                            <option value="">--Select one--</option>
                            <% if (postCategories) { %> <% postCategories.forEach(item => { %>
                            <option value="<%= item.toLowerCase() %>"><%= capitalize(item) %></option>
                            <% }) %> <% } %>
                        </select>
                    </div>
                    <div class="col-lg-6">
                        <div class="d-flex align-items-center mt-1 mt-md-0">
                            <span class="fw-semibold ms-4 me-2">New</span>
                            <input type="text" class="form-control" name="new-category" autocomplete="off" />
                        </div>
                    </div>
                </div>

                <div class="form-group mb-4">
                    <label for="keywords" class="form-label fw-semibold">Keywords</label>
                    <input type="text" class="form-control" id="keywords" name="keywords" autocomplete="off" />
                </div>
                <div class="form-group mb-4">
                    <label for="excerpt" class="form-label fw-semibold">Excerpt<span class="text-danger">*</span></label>
                    <textarea class="form-control" id="excerpt" name="excerpt" rows="3" maxlength="140" required></textarea>
                </div>
                <div class="form-group mb-4">
                    <label for="post-body" class="form-label fw-semibold">Body<span class="text-danger">*</span></label>
                    <textarea name="body" id="post-body"></textarea>
                </div>
                <button type="submit" class="btn btn-dark">Create</button>
                <button id="cancel-button" type="button" class="btn btn-outline-dark ms-2">Cancel</button>
            </form>
        </div>
    </div>
</main>
