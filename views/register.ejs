<div class="my-form card px-4 pt-4 pb-5 shadow-sm small">
  <form method="post" action="/register">
    <h1 class="text-center fw-bolder fs-5 mb-4">Register</h1>
    <div class="form-group mb-3">
      <label for="username" class="form-label">Username</label>
      <input type="text" class="form-control shadow-sm" id="username" name="username" autocomplete="off" />
    </div>
    <div class="form-group mb-4">
      <label for="password" class="form-label">Password</label>
      <input type="password" class="form-control shadow-sm" id="password" name="password" />
    </div>
    <button type="submit" class="btn btn-dark shadown-sm w-100">Sign up</button>
  </form>
</div>
